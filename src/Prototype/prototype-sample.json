{
  "ConfigEnv": {
    "db": {
      "host": "localhost",
      "login": "root",
      "password": "",
      "name": "prototype_crm"
    },
    "globalTablePrefix": "gtp",
    "rewriteBase": "/prototype_crm/"
  },
  "ConfigApp": {
    "applicationName": "Prototype CRM",
    "smtp": {
      "host": "test.smtphost.com",
      "port": "465",
      "login": "test",
      "password": "password123",
      "protocol": "ssl",
      "from": "test@smtphost.com"
    }
  },
  "Widgets": {
    "Home": {
      "faIcon": "fa-cog",
      "sidebar": {
        "Home": {
          "Dashboard": "Home/Dashboard"
        }
      },
      "actions": {
        "Dashboard": {
          "template": "Dashboard"
        }
      }
    },
    "CustomersAndBids": {
      "faIcon": "fa-address-book",
      "sidebar": {
        "Customers + Bids": {
          "Customers": "Customers",
          "Bids": "Bids"
        }
      },

      "models": {
        "Customer": {
          "sqlName": "customers",
          "urlBase": "Customers",
          "tableTitle": "Customers",
          "formTitleForInserting": "New customer",
          "formTitleForEditing": "Edit customer",
          "lookupSqlValue": "{%TABLE%}.name",
          "columns": {
            "name": {
              "type": "varchar",
              "title": "Customer name",
              "show_column": true
            }
          }
        },
        "Bid": {
          "sqlName": "bids",
          "urlBase": "Bids",
          "tableTitle": "Bids",
          "formTitleForInserting": "New bid",
          "formTitleForEditing": "Edit bid",
          "lookupSqlValue": "{%TABLE%}.title",
          "columns": {
            "title": {
              "type": "varchar",
              "title": "Bid title",
              "show_column": true
            }
          }
        }
      }
    },
    "Calendar": {
      "faIcon": "fa-cog",
      "sidebar": {
        "Calendar": {
          "Calendar": "Calendar/Main"
        }
      },
      "actions": {
        "Main": {
          "template": "Calendar"
        }
      }
    },
    "Settings": {
      "faIcon": "fa-cog",
      "sidebar": {
        "Settings": {
          "Basic settings": "Settings/Basic"
        }
      },
      "actions": {
        "Basic": {
          "template": "SettingsPanel"
        }
      }
    }
  }
}