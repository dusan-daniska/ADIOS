class {{ thisController.class }} extends \ADIOS\Core\Widget\Controller {
  public function render() {
    return $this->adios->renderAction("UI/SettingsPanel", [
      'settings_group' => 'sales',
      'title' => '{{ thisController.config.title }}',
      'template' => [
        'items' => [
