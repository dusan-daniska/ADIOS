<canvas id="chart-1"></canvas>

<script>
  var config = {
    type: '{{ params.type }}',
    data: {
      labels: ['{{ params.labels|join("', '")|raw }}'],
      datasets: {{ params.datasets|json_encode|raw }},
    },
    options: {
      responsive: true,
      title: {
        display: true,
        text: 'Chart.js Pie Chart'
      },
      legend: {
        position: 'top',
      }
    },
  };

  new Chart(document.getElementById('chart-1').getContext('2d'), config);
</script>
