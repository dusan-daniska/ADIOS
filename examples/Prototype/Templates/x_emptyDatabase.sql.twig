-- create database `{{ ConfigEnv.db.database }}` character set utf8 collate utf8_general_ci;
{% if ConfigEnv.db.password != "" and ConfigEnv.db.password != "root" %}
  create user if not exists `{{ ConfigEnv.db.user }}` identified by '{{ ConfigEnv.db.password }}';
  grant all on {{ ConfigEnv.db.database }}.* to {{ ConfigEnv.db.user }}@localhost identified by '{{ ConfigEnv.db.password }}';
  flush privileges;
{% endif %}
